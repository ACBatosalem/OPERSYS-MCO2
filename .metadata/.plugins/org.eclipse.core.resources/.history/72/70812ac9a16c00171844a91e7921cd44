package caltrain;

public class TrackController {
	public TrackController(CalTrain model, TrackView view){
		model.station_init(0);
		view.createStation();
		
		view.scene.setOnKeyPressed(e -> {
			switch(e.getCode()){
			case ENTER: view.addTrain(); break;
			case P: view.anim.get(0).pause(); break;
			case O: view.anim.get(0).play(); break;
			}
		});
	}
}
