package views;

import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class Train {
	public static String spriteLoc = "sprites/pellettrain.png";
	public ImageView sprite;
	public double xValue;
	public double yValue;
	
	public Train(){
		sprite = new ImageView();
		sprite.setImage(new Image(spriteLoc));
		sprite.setRotate(90);
		sprite.setLayoutX(50 - sprite.getLayoutBounds().getMinX());
		sprite.setLayoutY(50 - sprite.getLayoutBounds().getMinY());
	}
	
}
